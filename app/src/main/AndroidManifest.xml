<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moodtracker">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MoodTracker"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MoodActivity" />
        <activity android:name=".AddActivity" />
        <activity android:name=".MoodHistoryActivity" />
        <activity android:name=".OptionActivity" />
        <activity android:name=".EditActivity" />
        <activity android:name=".ViewPictureActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".FriendAcceptActivity" />
        <activity android:name=".FriendAskActivity" />
        <activity android:name=".FriendEditActivity" />
        <activity android:name=".FriendListActivity" />
        <activity android:name=".MoodFriendHistoryActivity" />
    </application>

</manifest>